	"version": "0.2.0",
	"configurations": [
		{
            "name": "main",
            "type": "cppdbg",
            "request": "launch",
			"preLaunchTask": "Build", //name of the task that builds your program
            "program": "${workspaceFolder}/main.exe", //path to your programs exe and exe name
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
		
	]
}
